@import '~@common/styles/common/variables.styl';

.leftContain {
  display: flex;
  flex-direction: column;
}

.GISClass .table_style {
  height: auto !important;
}

.table_style {
  flex: 1;
  flex-basis: auto;
  background: $tableBgColor;
  left: 0;
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;

  &.w800 {
    width: 800px;
  }

  .page-title {
    line-height: 40px;
    font-size: 14px;
    background: $pageFormBgColor;
    padding: 0 10px;
    border-bottom: 1px dashed #464b55;
    color: #fff;

    .iconfont {
      font-size: 14px;
    }

    .text {
      width: 100%;
      overflow: hidden;
      white-space: normal;
      word-break: break-all;

      &:before {
        margin-right: 10px;
        content: '';
        display: inline-block;
        width: 4px;
        height: 10px;
        background-color: #0080c1;
        border: 3px solid #1c516f;
        vertical-align: sub;
      }
    }

    .icon {
      cursor: pointer;
      font-size: $fontSizeNormal;
      text-align: center;
      width: 30px;
      transform: rotateZ(180deg);
      z-index: 2;
    }
  }

  .table-flex-wraper {
    flex: 1;
    flex-basis: auto;
    display: flex;
    flex-direction: column;
    overflow: hidden;

    .table-contain-wrapper {
      flex: 1;
      flex-basis: auto;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }
  }

  .el-table {
    border: 1px solid $tableBorderColor;
    margin: 0 10px;
    box-sizing: border-box;
    width: auto;
    color: $myTableFontColor;
    background: $myTableBgColor;
    flex: 1;
    flex-basis: auto;

    &:before {
      height: 0;
    }

    th, td, .el-table th.is-leaf {
      border-color: $myTableBorderColor;
    }

    td, th {
      padding: 0;
      background: $myTableBgColor;

      .cell {
        height: 41px;
        line-height: 41px;
        padding: 0;
        text-align: center;
      }
    }

    .el-table__fixed-right-patch {
      background: url('~@assets/toolIcon/UI/topbtnBg.png');
    }

    .el-table__header th {
      height: 45px;
      background: url('~@assets/toolIcon/UI/topbtnBg.png');
      color: $tableFontColor;
      cursor: default;
      border-color: transparent;
      font-weight: normal;

      &:after {
        content: '';
        display: block;
        position: absolute;
        right: 0;
        top: 0;
        width: 1px;
        height: 100%;
        background-image: linear-gradient(0deg, #434752 0%, #595e6b 100%);
      }
    }
  }

  .el-table--border::after, .el-table--group::after, .el-table::before {
    background-image: linear-gradient(0deg, #434752 0%, #595e6b 100%);
  }

  .el-table--striped .el-table__body tr.el-table__row--striped td {
    background: $myTableBgStripColor;
  }

  .el-table--striped .el-table__body tr td, .el-table__body tr td {
    transition: none;
    border-color: $myTableBorderColor;
  }

  .el-table--enable-row-hover .el-table__body tr:hover>td, .el-table__body tr.hover-row>td, .el-table--striped .el-table__body tr.el-table__row--striped.hover-row td, .table_style .el-table--striped .el-table__body tr:hover> td {
    background-color: $tableActiveColor;
    border-right-color: $tableActiveColor;
    color: $tableFontColor;
    transition: none;
  }

  .el-table--striped .el-table__body tr.el-table__row--striped.current-row td, .el-table__body tr.el-table__row.current-row >td {
    background-color: $tableActiveColor;
    border-color: $tableActiveColor;
    color: $tableFontColor;
    transition: none;
  }

  .el-table--border, .el-table--group {
    border-color: $tableBorderColor;
  }

  .el-pagination {
    background: $tableBgColor;
    color: $paginationFontColor;
    text-align: right;
    height: $paginationHeight;
    line-height: $paginationHeight;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 0 10px;

    .el-pagination__editor.el-input .el-input__inner, .el-select .el-input .el-input__inner, .el-pager li, .btn-next, .btn-prev {
      box-sizing: border-box;
      border-radius: 2px;
      background: $paginationInputColor;
      color: $paginationFontColor;
      border-color: $paginationInputBorderColor;
    }

    .el-pager li {
      border-radius: 0;
    }

    .el-pager li.active {
      background-color: $paginationActiveColor;
    }

    .btn-next, .btn-prev {
      border: 1px solid $paginationInputBorderColor;
    }

    .btn-next {
      border-radius: 0 2px 0;
      border-left: 0;
    }

    .btn-prev {
      border-radius: 2px 0 0 2px;
      border-right: 0;
    }

    button:disabled {
      background: transparent;
    }

    .el-pagination__editor.el-input {
      width: 36px;
      padding: 0 3px;
    }

    .el-pagination__total, .el-pagination__jump {
      color: $paginationFontColor;
      letter-spacing: 0.3px;
    }

    .el-pager {
      border: 1px solid $paginationInputBorderColor;
      height: 28px;
      line-height: 28px;
      box-sizing: border-box;
      color: #333;

      li, .more::before {
        line-height: 26px;
        height: 26px;
        min-width: 28px;
        padding: 0;
      }
    }
  }
}

.table_style.flexible, .table_style .flexible {
  width: 0;
  left: -500px;
  min-width: 0;

  .page-title {
    color: #fff;

    .icon {
      width: 56px;
      height: 30px;
      line-height: 30px;
      border-radius: 0 100px 100px 0;
      transform: rotateZ(0);
      position: absolute;
      left: 500px;
      top: 0;
      margin: 0 auto;
      background: rgba(47, 50, 57, 0.7);
      z-index: 6;
    }
  }

  .charWraper, .char-wraper {
    display: none;
  }
}

/* 定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸 */
::-webkit-scrollbar {
  width: 8px; /* 滚动条宽度 */
  height: 8px; /* 滚动条高度 */
}

/* 定义滚动条轨道 */
::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 2px rgba(255, 255, 255, 0.1);
  background: #fff;
}

/* 定义滑块 内阴影+圆角 */
::-webkit-scrollbar-thumb {
  border-radius: 8px; /* 滚动条的圆角 */
  // background-color: rgb(221,223,224);  /*滚动条的背景颜色*/
  background-color: #68788f;
}

/* 定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸 */
::-moz-scrollbar {
  width: 8px; /* 滚动条宽度 */
  height: 8px; /* 滚动条高度 */
}

/* 定义滚动条轨道 */
::-moz-scrollbar-track {
  -moz-box-shadow: inset 0 0 2px rgba(255, 255, 255, 0.1);
  background: #fff;
}

/* 定义滑块 内阴影+圆角 */
::-moz-scrollbar-thumb {
  border-radius: 8px; /* 滚动条的圆角 */
  // background-color: rgb(221,223,224);  /*滚动条的背景颜色*/
  background-color: #68788f;
}

/* 滚动条结束 */
.table-scroll {
  height: 100%;

  .el-scrollbar__wrap {
    height: 100%;
    overflow-x: hidden;

    .el-scrollbar__view, .table-flex-wraper {
      height: 100%;
    }
  }
}

.esriSimpleSliderTL {
  top: 60px;
}

.complexTable .el-table .el-table__body {
  .el-table__row:hover, .el-table__row.hover-row, .el-table__row.current-row {
    td {
      border-bottom-color: $tableActiveColor;
    }

    & + tr.el-table__row--striped td {
      background-color: $tableActiveColor;
      border-color: $tableActiveColor;
      color: #fff;
    }
  }

  .el-table__row.el-table__row--striped:hover, .el-table__row.el-table__row--striped.hover-row, .el-table__row.el-table__row--striped.current-row {
    td {
      color: $myTableFontColor;
      background-color: $myTableBgStripColor;
      border-color: $myTableBorderColor;
      border-bottom-color: $myTableBorderColor;
    }
  }
}

.table_style .el-table__footer .el-table th, .table_style .el-table td, .table_style .el-table .el-table th.is-leaf {
  border-color: $tableActiveColor;
}