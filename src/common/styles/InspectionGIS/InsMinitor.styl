.InsMinitor {
  width: 260px;
  min-width: 260px;

  // 左侧表单的标题样式
  .el-date-editor.el-input, .el-date-editor.el-input__inner {
    width: 100%;
  }

  .el-form {
    padding-bottom: 10px;
    border-bottom: 1px dashed #464b55;

    .el-row {
      height: 40px;

      &.btn-div {
        padding-top: 20px;
        font-size: 14px;
        line-height: 24px;
        color: #2fb8ee;

        span {
          cursor: pointer;

          svg {
            height: 20px;
            width: 20px;
            vertical-align: middle;
            display: inline-block;
          }
        }
      }
    }

    .slider-wraper {
      height: 65px;

      .label-wrapper {
        display: flex;
        justify-content: space-between;
        width: 95%;
        position: absolute;
        top: 36px;
      }

      .slider {
        position: relative;
        margin: -6px 10px 0;
        padding: 0;

        .el-slider__runway, .el-slider__bar {
          height: 12px;
          border-radius: 7px;

          .el-slider__button-wrapper {
            top: -12px;

            .el-slider__button {
              background: #0091da;
              border-color: #fff;
            }
          }
        }
      }

      .slide-value {
        cursor: default;
        line-height: 20px;
        height: 20px;
        text-align: center;
        position: absolute;
        top: 42px;
        border-radius: 2px;
        padding: 1px 10px;
        color: #ffffff;
        background: $minitorActiveColor;
        z-index: 1;
        border-radius: 10px;
        transform: translateX(-50%);

        i {
          color: $minitorActiveColor;
          position: absolute;
          left: 0;
          right: 0;
          top: -9px;
          margin: 0 auto;
        }
      }
    }
  }
}

.ins-collapse {
  height: calc(100vh - 340px);

  & > .el-scrollbar {
    height: calc(100vh - 340px);

    .el-scrollbar__wrap {
      overflow-x: hidden;
      margin-right:-20px;

      .uesr-info-warpper{
        margin-top: 10px;
        }
    }
  }

  .el-collapse {
    border: none;
  }

  .el-collapse-item {
    &.avatList {
      .avatListItem {
        height: 50px;
        line-height: 50px;
        list-style: none;
        border-bottom: 1px dashed $minitorBorderColor;
        font-size: 20px;
        color: #fff;
        background: $minitorBgColor;

        &.online {
          background: $minitorBgColor;
        }

        .img-wraper {
          border-radius: 50%;
          height: 42px;
          width: 42px;
          display: inline-block;
          vertical-align: middle;
          margin: 0 20px;
          margin-top: -2px;
          background: #499A96;
          position: relative;
          overflow: hidden;

          img {
            width: 100%;
            height: 100%;
          }

          .img-shadow {
            opacity: 0.5;
            content: '';
            display: block;
            background: #000;
            width: 42px;
            height: 42px;
            position: absolute;
          }
        }

        &.active {
          background: #415161;
          color: #fff;
        }
      }
    }

    .el-collapse-item__wrap {
      // height:calc(100vh - 540px);
      border: 0;
      background-color: $tableBgColor;

      .el-collapse-item__content {
        padding-bottom: 0 !important;
        // height:calc(100vh - 540px);
        // .el-scrollbar{
        // height:100%;
        // .el-scrollbar__wrap{
        // overflow-x:hidden;
        // margin-right:-20px;
        // margin-top: 10px;
        // }
      }
    }

    .el-collapse-item__header {
      background: $minitorBgColor;
      color: #fff;
      padding-left: 10px;
      font-size: 16px;
      height: 40px;
      line-height: 40px;
      border: 0;
      margin: 10px 0 0;

      i {
        padding-right: 10px;

        &:first-child {
          color: $minitorActiveColor;
        }
      }

      &.is-active {
      }
    }
  }
}

.stateChoose {
  height: $minitorStateHeight;
  line-height: $minitorStateHeight;
  color: #fff;
  text-align: center;
  background: $tableBgColor;

  .el-col {
    cursor: pointer;
    line-height: $minitorStateHeight;
    color: #afbcc4;
    position: relative;

    &:after {
      content: '';
      display: inline-block;
      position: absolute;
      right: 0;
      transform: translateY(80%);
      width: 2px;
      height: 17px;
      background-color: #3b3e45;
      box-shadow: -1px 0px 0px 0px rgba(20, 20, 22, 0.44);
    }

    i {
      vertical-align: sub;
      display: inline-block;
      margin-right: 6px;
    }

    &.active {
      color: $minitorActiveColor;
      width: 33%;

      i {
        font-weight: 800;
      }
    }
  }
}

.map_add_dialog {
  width: 300px;

  .el-dialog__header {
    padding: 6px 20px 4px;
  }

  .el-dialog__headerbtn {
    top: 8px;
    right: 10px;
  }

  .el-dialog__body {
    padding: 4px;
  }

  .el-form-item--small.el-form-item {
    margin-bottom: 4px;
  }

  .el-dialog__footer {
    padding: 0px 20px 10px;
  }
}