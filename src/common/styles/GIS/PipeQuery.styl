.Home_container .MainLeft p {
	padding-top: 2px;
}

.el-main {
	height: 100%;
	display: flex;
}

.Pipe_Query_container {
	overflow: hidden;
	flex: 1;
	flex-basis: auto;
	display: flex;
	position: inherit !important;

	#mapNode {
		width: 100%;
		flex: 1;
		flex-basis: auto;
		position: relative;
	}

	.esriSimpleSliderTL {
		top: 90px;
	}

	.el-checkbox__input.is-checked+.el-checkbox__label {
		color: #333;
	}
}

.fullScreen .coordinate-wrapper {
	display: none;
}

.fullScreen.flexible .coordinate-wrapper {
	display: block;
}

// 右下角坐标展示
.coordinate-wrapper {
	position: absolute;
	bottom: 6px;
	right: 20px;
	text-align: left;
	z-index: 1;
	color: #313233;
	font-weight: 800;
	font-size: 12px;
}

// 右键删除展示
.dijitPopup.dijitMenuPopup {
	position: absolute;
	background: #fff;
	border-radius: 2px;
	top: 100px;
	right: 4px;

	.dijit.dijitReset.dijitMenu {
		padding: 2px 0 2px 8px;
		margin: 0;
	}
}

//卷帘
#swipeDiv.LayerSwipe .vertical {
	margin-top: 40px;
	z-index: 1;
}

#mmapWrapper {
	border-radius: 50%;
	visibility: hidden;
	z-index: 999;
	background: rgba(255, 255, 255, 0.6);
	border: 1px solid gray;
	box-shadow: 0 0 5px gray;
	position: absolute;
	overflow: hidden;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	top: 0px;
	right: 0px;
	height: 100%;
	width: 100%;
}

#mmap {
	position: absolute;
	height: 100%;
	width: 100%;
	margin: 0;
	padding: 0;
	top: 0px;
	right: 0px;
}

#templateDiv {
	height: 0;
	padding: 0;
	border: 0;
}

#editorDiv {
	position: absolute;
	z-index: 3;

	.templatePicker {
		border: 0;
		padding: 0;
		height: 0 !important;
	}
}
