.easy-card{
	margin: 0 20px 20px 0
	padding: 30px 20px;
	color: #ffffff;
	position: relative;
	.line-border{
		span{
			position: absolute;
			width: 10px;
			height: 10px;
			&:nth-child(1){
				top:-3px;
				left : -3px;
				border-top:1px solid #00c3aa;
				border-left:1px solid #00c3aa;
			}
			&:nth-child(2){
				top:-3px;
				right : -3px;
				border-top:1px solid #00c3aa;
				border-right:1px solid #00c3aa;
			}
			&:nth-child(3){
				bottom:-3px;
				right : -3px;
				border-bottom:1px solid #00c3aa;
				border-right:1px solid #00c3aa;
			}
			&:nth-child(4){
				bottom:-3px;
				left : -3px;
				border-bottom:1px solid #00c3aa;
				border-left:1px solid #00c3aa;
			}
		}
	}
	.bg-icon{
		position: absolute;
		z-index: 0;
		right: 2px;
		bottom: -5px;
		color: #1499b4;
		opacity: 0.69;
		.iconfont{
			font-size: 160px;
		}
	}
	
	&.bg1{
		background-image: linear-gradient(90deg, #00c3aa 0%, #01aed5 100%);
	}
	&.bg2{
		background-image: linear-gradient(90deg, #e3870a 0%, #e2640b 100%);
	}
	&.bg3{
		background-image: linear-gradient(90deg, #2665e1 0%, #4501d6 100%);
	}
	&.bg4{
		background-image: linear-gradient(90deg, #e12076 0%, #b9024c 100%);
	}
	.content{
		position: relative;
		z-index: 2;
		p:nth-child(1){
			font-size: 20px;
		}
		p:nth-child(2){
			font-size: 48px;
			padding:10px 0;
		}
		p:nth-child(3){
			font-size: 16px;
		}
	}
}


